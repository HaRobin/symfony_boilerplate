{# templates/task/edit.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Modifier une Tâche{% endblock %}
{% block body %}
<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Modifier la Tâche</h1>
    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
    {{ form_widget(form, {'attr': {'class': 'border p-2 rounded w-full'}}) }}
    <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded">Mettre à Jour</button>
    {{ form_end(form) }}
</div>
{% endblock %}
