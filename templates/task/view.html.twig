{# templates/task/view.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Détails de la Tâche{% endblock %}
{% block body %}
<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">{{ task.getName() }}</h1>
    <p class="text-gray-700">{{ task.getDescription() }}</p>
    <p class="text-sm text-gray-500 mt-2">Créé le {{ task.getCreatedAt()|date('d/m/Y H:i:s') }}</p>
    <p class="text-sm text-gray-500 mt-2">Mis à jour le {{ task.getUpdatedAt()|date('d/m/Y H:i:s') }}</p>
    <a href="{{ path('app_task') }}" class="bg-gray-500 text-white px-4 py-2 rounded mt-4 inline-block">Retour</a>
</div>
{% endblock %}
