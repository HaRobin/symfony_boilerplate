{# templates/task/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Liste des Tâches{% endblock %}
{% block body %}
<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Liste des Tâches</h1>
    <a href="{{ path('app_task_create') }}" class="bg-blue-500 text-white px-4 py-2 rounded">Créer une Tâche</a>
    <ul class="mt-4">
        {% for task in tasks %}
            <li class="border-b p-2 flex justify-between items-center">
                <span>{{ task.getName() }}</span>
                <div>
                    <a href="{{ path('app_task_view', {id: task.id}) }}" class="text-blue-500">Voir</a>
                    <a href="{{ path('app_task_edit', {id: task.id}) }}" class="text-yellow-500 ml-2">Modifier</a>
                    <a href="{{ path('app_task_delete', {id: task.id}) }}" class="text-red-500 ml-2">Supprimer</a>
                </div>
            </li>
        {% else %}
            <p>Aucune tâche trouvée.</p>
        {% endfor %}
    </ul>
</div>
{% endblock %}
